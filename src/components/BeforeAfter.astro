---
interface Props {
  title: string;
  description: string;
  beforeImage: string;
  afterImage: string;
  alt: string;
}

const { title, description, beforeImage, afterImage, alt } = Astro.props;
---

<div class="bg-white rounded-xl shadow-lg overflow-hidden transform transition-all hover:shadow-xl">
  <div class="p-6">
    <h3 class="text-2xl font-bold mb-4 text-gray-900">{title}</h3>
    <p class="text-gray-600 mb-6">{description}</p>
    <div class="grid gap-6">
      <div class="relative group">
        <img
          src={beforeImage}
          alt={`Avant - ${alt}`}
          class="w-full h-[400px] object-cover rounded-lg shadow-md"
          loading="lazy"
        />
        <div class="absolute top-4 left-4 bg-red-500/90 backdrop-blur-sm text-white px-4 py-2 rounded-full text-sm font-semibold shadow-lg">
          Avant
        </div>
        <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity rounded-lg"></div>
      </div>
      <div class="relative group">
        <img
          src={afterImage}
          alt={`Après - ${alt}`}
          class="w-full h-[400px] object-cover rounded-lg shadow-md"
          loading="lazy"
        />
        <div class="absolute top-4 left-4 bg-green-500/90 backdrop-blur-sm text-white px-4 py-2 rounded-full text-sm font-semibold shadow-lg">
          Après
        </div>
        <div class="absolute inset-0 bg-black/40 opacity-0 group-hover:opacity-100 transition-opacity rounded-lg"></div>
      </div>
    </div>
  </div>
</div>