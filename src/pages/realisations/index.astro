---
import Layout from '../../layouts/Layout.astro';
import CTASection from '../../components/CTASection.astro';

const villes = [
  {
    nom: 'Roubaix',
    description: 'Découvrez nos réalisations de nettoyage de vitres à Roubaix : vitrines commerciales, vérandas, baies vitrées...',
    image: '/images/realisations/roubaix/cover.jpg',
    href: '/realisations/roubaix',
    highlights: [
      'Expertise en vitrines commerciales',
      'Spécialiste vérandas',
      'Traitement anti-calcaire'
    ]
  },
  {
    nom: 'Tourcoing',
    description: 'Nos travaux de nettoyage de vitres à Tourcoing : baies vitrées, verrières, vitrines...',
    image: '/images/realisations/tourcoing/cover.jpg',
    href: '/realisations/tourcoing',
    highlights: [
      'Spécialiste grandes baies vitrées',
      'Nettoyage de verrières',
      'Traitement vitres teintées'
    ]
  }
];
---

<Layout
  title="Réalisations de Nettoyage de Vitres | Vitres Wattrelos"
  description="Découvrez nos réalisations de nettoyage de vitres professionnel dans la métropole lilloise. Avant/Après et témoignages clients."
>
  <div class="bg-gray-50 py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h1 class="text-4xl font-bold text-gray-900">Nos Réalisations</h1>
        <p class="mt-4 text-xl text-gray-600">Découvrez nos travaux de nettoyage de vitres par ville</p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 mb-12">
        {villes.map(({ nom, description, image, href, highlights }) => (
          <a href={href} class="block group">
            <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow">
              <div class="relative h-64">
                <img
                  src={image}
                  alt={`Réalisations de nettoyage de vitres à ${nom}`}
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-300"
                />
                <div class="absolute inset-0 bg-gradient-to-t from-black/60 to-transparent"></div>
                <h2 class="absolute bottom-4 left-6 text-2xl font-bold text-white">
                  Nettoyage de Vitres à {nom}
                </h2>
              </div>
              <div class="p-6">
                <p class="text-gray-600 mb-4">{description}</p>
                <ul class="space-y-2">
                  {highlights.map((highlight) => (
                    <li class="flex items-center text-gray-600">
                      <svg class="h-5 w-5 text-primary mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                      </svg>
                      {highlight}
                    </li>
                  ))}
                </ul>
                <div class="mt-4 text-primary font-medium group-hover:translate-x-2 transition-transform">
                  Voir les réalisations →
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>

      <CTASection />
    </div>
  </div>
</Layout>